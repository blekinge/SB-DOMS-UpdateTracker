<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <listener>
        <listener-class>
            dk.statsbiblioteket.doms.webservices.configuration.ConfigContextListener
        </listener-class>
    </listener>

    <listener>
        <listener-class>
            com.sun.xml.ws.transport.http.servlet.WSServletContextListener
        </listener-class>
    </listener>
    
    <context-param>
        <param-name>dk.statsbiblioteket.doms.domsutil.surveyable.surveyables</param-name>
        <param-value>dk.statsbiblioteket.doms.domsutil.surveyable.NoSurveyable</param-value>
    </context-param>

    <!-- SOAP webservice -->
    <servlet>
        <description>JAX-WS endpoint</description>
        <display-name>WSServlet</display-name>
        <servlet-name>WSServlet</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>WSServlet</servlet-name>
        <url-pattern>/surveyable/*</url-pattern>
    </servlet-mapping>

    <!-- REST webservice -->
    <servlet>
        <servlet-name>Surveyable</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>dk.statsbiblioteket.doms.domsutil.surveyable</param-value>
        </init-param>
    </servlet>
</web-app>
