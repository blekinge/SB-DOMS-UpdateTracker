<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     debug="false">

    <!--DO NOT RENAME THIS APPENDER-->
    <appender name="DomsUpdateTrackerRegistry"
              class="dk.statsbiblioteket.doms.domsutil.surveillance.logappender.Log4jRegistryAppender">
        <param name="Threshold" value="WARN"/>
        <param name="dk.statsbiblioteket.doms.surveillance.logappender.numberOfMessages" value="100"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>


    <appender name="DomsUpdateTrackerFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="File" value="logs/DomsUpdateTracker.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <!-- A console appender -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="ERROR"/>
        <!-- or WARN or DEBUG or INFO -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="DomsFile"
              class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="INFO"/>
        <param name="File" value="logs/doms.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>


    <logger name="dk.statsbiblioteket.doms.updatetracker">
        <level value="ALL"/>
        <appender-ref ref="DomsUpdateTrackerRegistry"/>
        <appender-ref ref="DomsUpdateTrackerFile"/>
    </logger>


    <root>
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DomsFile"/>
    </root>
</log4j:configuration>